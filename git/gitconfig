[difftool]
  prompt = false
[mergetool]
  keepBackup = false
[mergetool "diffconflicts"]
  cmd = vim -c DiffConflicts \"$MERGED\" \"$BASE\" \"$LOCAL\" \"$REMOTE\"
  trustExitCode = true
[branch]
  sort = -authordate
[rebase]
  autoStash = true
[rerere]
  enabled = true
  autoupdate = true
