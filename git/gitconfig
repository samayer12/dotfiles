[alias]
  ad = add
  br = branch
  cm = commit
  co = checkout
  lg = log
  df = diff
  sh = show
  cp = cherry-pick
  dfs = diff --staged
  dfc = diff --check
  dfsc = diff --staged --check
  incoming = log ..@{u}
  outgoing = log @{u}..
  dfw = diff --word-diff=color
  lol = log --graph --decorate --oneline
  lola = log --graph --decorate --oneline --all
[core]
  editor = "vim"
[user]
